{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <div class="flex items-center justify-center min-h-[calc(100vh-168px)] bg-gray-100">
        <div class="w-full max-w-sm bg-white p-8 rounded-xl shadow-lg">
            <h1 class="text-3xl font-bold text-center text-gray-800 mb-6">Connexion à notre Boutique</h1>

            {% if error %}
                <div class="bg-red-500 text-white p-4 mb-4 rounded">
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endif %}

            {% if app.user %}
                <div class="mb-4 text-center text-gray-700">
                    You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}" class="text-blue-600 hover:text-blue-800">Logout</a>
                </div>
            {% endif %}

            <form method="post">
                <div class="mb-4">
                    <label for="inputEmail" class="block text-sm font-medium text-gray-700">Email</label>
                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500" autocomplete="email" required autofocus>
                </div>

                <div class="mb-4">
                    <label for="inputPassword" class="block text-sm font-medium text-gray-700">Mot de passe</label>
                    <input type="password" name="password" id="inputPassword" class="w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500" autocomplete="current-password" required>
                </div>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <div class="flex items-center mb-6">
                    <input type="checkbox" name="_remember_me" id="rememberMe" class="h-4 w-4 text-indigo-600 border-gray-300 rounded">
                    <label for="rememberMe" class="ml-2 text-sm text-gray-700">Rester connecté</label>
                </div>

                <button type="submit" class="w-full py-2 px-4 bg-blue-600 text-white font-semibold rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">
                    Connexion
                </button>
            </form>
        </div>
    </div>
{% endblock %}
