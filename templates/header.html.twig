{# templates/header.html.twig #}

<header class="bg-gray-800 text-white">
    <div class="max-w-screen-xl mx-auto px-4 py-4 flex items-center justify-between">
        <!-- Logo -->
        <a href="/" class="flex items-center space-x-2">
            <img src="https://static.vecteezy.com/system/resources/previews/046/788/547/non_2x/red-wax-seal-free-png.png" alt="Logo" class="h-12 w-12">
            <span class="text-lg font-semibold hover:text-indigo-400">WineShop</span>
        </a>

        <!-- Navigation utilisateur -->
        <nav class="flex space-x-6 items-center text-sm">
            <a href="{{ path('voir_panier') }}" class="hover:text-indigo-400">Panier</a>

            {% if app.user %}
                <a href="{{ path('app_user_profil') }}" class="hover:text-indigo-400">Mon Profil</a>

                {% if is_granted('ROLE_ADMIN') %}
                    <a href="{{ path('admin') }}" class="hover:text-indigo-400">Admin</a>
                {% endif %}

                <form action="{{ path('app_logout') }}" method="post" class="inline">
                    <button type="submit" class="bg-red-500 hover:bg-red-600 text-white py-1 px-3 rounded-md">
                        Déconnexion
                    </button>
                </form>
            {% else %}
                <a href="{{ path('app_login') }}" class="hover:text-indigo-400">Se connecter</a>
                <a href="{{ path('app_register') }}" class="hover:text-indigo-400">S'inscrire</a>
            {% endif %}
        </nav>
    </div>
</header>

{# Barre des catégories séparée et centrée #}
<nav class="bg-gray-700 text-white py-2">
    <div class="max-w-screen-xl mx-auto px-4 flex justify-center space-x-6 text-sm">
        {% for categorie in categories %}
            <a href="{{ path('app_categorie_show', {'name': categorie.name}) }}" class="hover:text-indigo-400">
                {{ categorie.name }}
            </a>
        {% endfor %}
    </div>
</nav>
